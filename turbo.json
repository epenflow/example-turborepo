{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "lint": {
      "inputs": [".env", ".env.example"],
      "dependsOn": ["^lint"],
      "env": ["DEV", "NODE_ENV"]
    },
    "dev": {
      "cache": true,
      "persistent": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    }
  }
}
